<!DOCTYPE html>
<html>
<head>
  <title>Myproject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

<header>
	<% if user_signed_in? %>
		<p><%= current_user.name %>, you currently have <%= current_user.total_points %> points.</p>
		<%= link_to "Browse", root_path %>
		<%= link_to "My Posts", my_posts_path %>
		<%= link_to "Viewed Posts", viewed_posts_path %>
		<%= link_to "Create New Post", new_post_path %>
		<%= link_to "Dashboard", show_user_path %>
		<%= link_to "Log out", destroy_user_session_path, method: 'DELETE' %>
	<% else %>
		<p>You're not signed in. 
		<%= button_to "Log in", new_user_session_path, method: 'GET' %>
		or
		<%= link_to "Sign up", new_user_registration_path %></p>
	<% end %>
</header>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Penny For Thoughts", root_path, class: "navbar-brand" %>
    </div>
  </div>
</nav>

<%= yield %>

</div>
</body>
</html>
